<div class="container">
    <header class="header">
        <h2>
            Blog
        </h2>
    </header>
    <hr>
    <br>
    <br>
</div>
<div class="container">
    <div class="form-group row">
        <div class="col-sm-12">
            <h4>New Blog Post</h4>
            <br>
            <h6>Title</h6>
            <div class="form-group">
                <input type="text" class="form-control" id="items" placeholder="">
            </div>
            <br>
            <h6>Description</h6>
            <div class="form-group">
                <label for="exampleFormControlTextarea1"></label>
                <textarea class="form-control" id="description" rows="3"></textarea>
            </div>
            <button class="btn btn-primary" id="add-item" data-id="{{dataValues.id}}"
                data-complete="{{dataValues.complete}}">Add new to the blog</button>
        </div>
    </div>
    <br>
    <hr>
    <br>
    <div class="row">
        <div class="col-md-12">
            <h4>Blog History</h4>
            <ol>
                {{#each blogs}}
                {{#if dataValues.complete}}
                <div class="media">
                    <div class="media-body">
                        <h5 class="mt-0">{{dataValues.title}}</h5>
                        {{dataValues.body}}
                        <button class="btn-xs btn-danger delete-item" data-id="{{dataValues.id}}"
                            data-complete="{{dataValues.complete}}">
                            <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                                xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z" />
                                <path fill-rule="evenodd"
                                    d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                                    clip-rule="evenodd" />
                            </svg></button>
                        <hr>
                        </li>
                        {{/if}}
                        {{/each}}
            </ol>
        </div>
    </div>
</div>